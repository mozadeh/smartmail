<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:background="#FFFFFF"
    >
     <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:background="#000000"
                    android:layout_alignParentTop="true"
                    android:id="@+id/imguploadtbar"
                >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:text="Profile Picture"
                        android:textSize="18dip"
                        android:textColor="#FFFFFF"
                    />
                </RelativeLayout>
    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:layout_below="@+id/imguploadtbar"
        android:layout_centerInParent="true" />
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:stretchColumns="*"
        android:background="#808080"
        >
            <TableRow >
                <Button
                    android:layout_width="fill_parent"
                    android:id="@+id/imguploadbtn"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:text="Upload" />
                <Button
                    android:layout_width="fill_parent"
                    android:id="@+id/imgcancelbtn"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:text="Cancel" />
             </TableRow>
         </TableLayout>
         
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp" 
        android:paddingRight="10dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="100dip"
        >

        <Button
            android:id="@+id/camera"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:background="@drawable/newpollbottom_bg_selector"
            android:text="camera"
            android:textColor="@drawable/newpollbottom_text_selector" 
            android:textSize="17sp"/>

        <Button
            android:id="@+id/noButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/gallery"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:background="@drawable/newpollbottom_bg_selector"
            android:text="gallery"
            android:textColor="@drawable/newpollbottom_text_selector" 
            android:textSize="17sp"/>
    </LinearLayout>
 </RelativeLayout>