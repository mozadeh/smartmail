<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/registerll"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/registerbackground2" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="70dp"
            android:gravity="center|top"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_modified_states"
                android:ems="10"
                android:hint="firstname lastname"
                android:inputType="textPersonName|textCapWords"
                android:lines="1"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Username"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/username"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_modified_states"
                android:ems="10"
                android:hint="username"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Password"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/password"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_modified_states"
                android:ems="10"
                android:hint="password"
                android:lines="1"
                android:singleLine="true" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Email"
                android:textColor="@android:color/white" />

            <EditText
                android:id="@+id/email"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:background="@drawable/edittext_modified_states"
                android:ems="10"
                android:hint="email for password recovery"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:singleLine="true" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="40dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/back"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/newpollbottom_bg_selector"
                    android:gravity="center"
                    android:text="Back"
                    android:textColor="@drawable/newpollbottom_text_selector"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/register"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/newpollbottom_bg_selector"
                    android:gravity="center"
                    android:text="Register"
                    android:textColor="@drawable/newpollbottom_text_selector"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>